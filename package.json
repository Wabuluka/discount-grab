{
  "name": "dg-shoppingcart",
  "version": "1.0.0",
  "description": "Full-stack e-commerce application with Express backend and Next.js frontend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-next && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend-next && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend-next && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend-next && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend-next/node_modules",
    "lint": "cd frontend-next && npm run lint",
    "test": "cd backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ecommerce",
    "nextjs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
